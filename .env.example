# Phase 6A - Historical data and autonomous training configuration

# Primary historical provider adapter
HIST_MARKET_DATA_PROVIDER=COINAPI
HIST_MARKET_DATA_API_KEY=replace_with_provider_key
HIST_MARKET_DATA_API_SECRET=
HIST_MARKET_DATA_BASE_URL=https://rest.coinapi.io
KRAKEN_PUBLIC_BASE_URL=https://api.kraken.com

# Universe / ranking source (CoinAPI + Kraken public only policy)
UNIVERSE_RANKING_SOURCE=COINAPI
UNIVERSE_REFRESH_CRON=0 0 * * *
LOCAL_DATA_CACHE_DIR=./data/market_archive

# Training universe + runtime toggles
TRAINING_UNIVERSE_VERSION=UNIVERSE_V1_TOP30_NON_STABLE
FORCE_LOCAL_DATA_FOR_TRAINING=true
ALLOW_PROVIDER_CALLS_DURING_TRAINING=false
ENABLE_CONTINUOUS_INGESTION=true
ENABLE_AUTONOMOUS_RETRAINING=true

# Phase 6 daemon runtime tuning
PHASE6_INGESTION_LOOP_SECONDS=60
PHASE6_RETRAIN_HOUR_UTC=0
PHASE6_API_BUDGET_PER_MINUTE=120
PHASE6_DRIFT_ACCURACY_DROP_PP=5.0
PHASE6_DRIFT_ECE_DELTA=0.03
PHASE6_DRIFT_PSI_THRESHOLD=0.25
PHASE6_DRIFT_RETRAIN_COOLDOWN_MINUTES=360
PHASE6_DRIFT_MIN_BASELINE_SAMPLES=24
PHASE6_PROMOTION_LOCAL_BRANCH=automation/phase6-promotions
PHASE6_DAEMON_LOCK_STALE_SECONDS=900
PHASE6_DAEMON_FAILURE_BACKOFF_SECONDS=120
PHASE6_DAEMON_MAX_CONSECUTIVE_FAILURES=10

# Optional Kraken private credentials (not required for Phase 6A training-only operation)
KRAKEN_API_KEY=
KRAKEN_API_SECRET=
